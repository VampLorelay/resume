{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>{{duration.from}} - 
                            {{#if duration.to}}
                                {{duration.to}}
                            {{else}}
                                (до тепер)
                            {{/if}}
                        </div>
                        <br>
                        <div>
                        {{#unless company.url}}
                            <b>{{company.name}}</b>
                        {{else}}
                            <div>
                                {{> link text=company.name href=company.url blank=true noLine=true}}
                            </div>
                        {{/unless}}     
                        </div>              
                        <br>
                        <br>
                        <div>
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>
                        <br>
                        <ul>
                            {{#each projects}}
                                <li>
                                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                    <br>
                                    <div>
                                        <p>{{about}}</p>
                                    </div>
                                    <br>
                                    <em>“Project stacks” ({{stackAmound}}) </em>                          
                                    <br>
                                    <div>
                                        {{> title data='Stacks' big=false}}  
                                        <ul>
                                            {{#each stacks}}
                                            <li>
                                                {{name}}                                                
                                            </li>
                                            {{/each}}
                                        </ul>                                     
                                    </div>
                                    <br>
                                    <em>“Project awards” ({{awardsAmound}}) </em>
                                    <br>
                                    <div>
                                        {{> title data='Awards' big=false}}  
                                        <ul>
                                            {{#each awards}}
                                            <li>
                                                {{name}}
                                            </li>
                                            {{/each}}
                                        </ul>                                     
                                    </div>
                                </li>
                            {{/each}}
                        </ul>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}

</div>

