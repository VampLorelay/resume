{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  <main>
    <h1>Web</h1>
    {{#with web}}
      <p><b>Languages:</b></p>
      {{#each languages}}
        <ul>
          <h3>{{name}}</h3>
          <ul>
            <div><b>Version: </b>{{version}}</div>
            <div><b>Description: </b>{{description}}</div>
            <br />
            <ul>
              {{#if elements}}
                <div><b>Elements: </b></div>
                <ul>
                  {{#each elements}}
                    <li>
                      <div>name: <b>{{name}}</b></div>
                      <div>description:
                        {{description}}</div>
                      <div>attributes: </div>
                      <ul>
                        {{#each attributes}}
                          <li>
                            <div>name: {{name}}</div>
                            <div>description:
                              {{description}}</div>
                          </li>
                        {{/each}}
                      </ul>
                    </li>
                  {{/each}}
                </ul>
              {{/if}}
              {{#if properties}}
                <div><b>Properties: </b></div>
                <ul>
                  {{#each properties}}
                    <li>
                      <div>name: <b>{{name}}</b></div>
                      <div>description:
                        {{description}}</div>
                      <div>values: </div>
                      <ul>
                        {{#each values}}
                          <li>
                            <div>value: {{value}}</div>
                            <div>description:
                              {{description}}</div>
                          </li>
                        {{/each}}
                      </ul>
                    </li>
                  {{/each}}
                </ul>
              {{/if}}
              {{#if functions}}
                <div><b>Functions: </b></div>
                <ul>
                  {{#each functions}}
                    <li>
                      <div>name: <b>{{name}}</b></div>
                      <div>description:
                        {{description}}</div>
                      <div>parameters: </div>
                      <ul>
                        {{#each parameters}}
                          <li>
                            <div>name: {{name}}</div>
                            <div>type: {{type}}</div>
                            <div>description:
                              {{description}}</div>
                          </li>
                        {{/each}}
                      </ul>
                    </li>
                  {{/each}}
                </ul>
              {{/if}}
            </ul>
          </ul>
        </ul>
      {{/each}}
    {{/with}}
  </main>
</div>

