{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<div>
  <main>
    {{#with page_header}}
      <div class='text-center text-capitalize'><h1
        >{{title}}</h1></div>
      <br />
      <p
        class='text-center text-uppercase'
      >{{description}}</p>
    {{/with}}
    {{#with section}}
      <div class='card'>
        <div class='card-body'>
          {{#with about_us}}
            {{#with title_list}}
              <div class='display-6 text-end'>{{main}}</div>
              <br />
              <h2 class='text-end'>{{sub}}</h2>
            {{/with}}
            <br />
            {{#with button}}
              <button
                class='btn btn-outline-info'
              >{{text}}</button>
            {{/with}}
          {{/with}}
        </div>
      </div>
      <br />
      <br />
      <div class='card'>
        <div class='card-body'>
          {{#with advantage}}
            <p class='display-5 text-muted'>{{title}}</p>
            {{#with efficiency}}
              <div class='card'>
                <div class='card-body'>
                  <p class='display-4 text-muted'>
                    {{title}}</p>
                  <h6>{{sub_title}}</h6>
                  <p>{{description}}</p>
                  <button class='btn btn-outline-warning'>
                    {{button}}</button>
                </div>
              </div>
            {{/with}}
            <br />
            {{#with innovation}}
              <div class='card'>
                <div class='card-body'>
                  <p
                    class='display-4 text-muted text-center'
                  >
                    {{title}}</p>
                  <h6 class='text-center'>{{sub_title}}</h6>
                  <p class='text-center'>{{description}}</p>
                  <button class='btn btn-outline-warning'>
                    {{button}}</button>
                </div>
              </div>
            {{/with}}
            <br />
            {{#with collaboration}}
              <div class='card'>
                <div class='card-body'>
                  <p class='display-4 text-muted text-end'>
                    {{title}}</p>
                  <h6 class='text-end'>{{sub_title}}</h6>
                  <p class='text-end'>{{description}}</p>
                  <button class='btn btn-outline-warning'>
                    {{button}}</button>
                </div>
              </div>
            {{/with}}
          {{/with}}
        </div>
      </div>
      <br />
      <div class='card'>
        <div class='card-body'>
          {{#with agreement}}
            <div class='display-5'>{{title}}</div>
            <br />
            <div class='card'>
              <div class='card-body'>
                {{#with info}}
                  <h5>{{sub_title}}</h5>
                  <br />
                  <div class='card'>
                    <div class='card-body'>
                      {{#with detail}}
                        <p>{{text}}</p>
                        <br />
                        <button
                          class='btn btn-success'
                        >{{button}}</button>
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
        </div>
      </div>
    {{/with}}
  </main>
</div>

